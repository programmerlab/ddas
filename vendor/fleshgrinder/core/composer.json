{
	"name": "fleshgrinder/core",
	"description": "Disable default behavior of PHP objects.",
	"license": "Unlicense",
	"authors": [
		{
			"name": "Richard Fussenegger",
			"email": "fleshgrinder@users.noreply.github.com"
		}
	],
	"require": {
		"php": "^7.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^6.0",
		"satooshi/php-coveralls": "^1.0",
		"codeclimate/php-test-reporter": "^0.4",
		"scrutinizer/ocular": "^1.3"
	},
	"autoload": {
		"psr-4": {
			"Fleshgrinder\\Core\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Fleshgrinder\\Core\\": [
				"src/",
				"tests/"
			]
		}
	},
	"scripts": {
		"test": "phpunit --colors=always --testdox"
	},
	"suggest": {
		"fleshgrinder/equalable": "For a consistent equals contract for objects.",
		"fleshgrinder/comparable": "For a consistent and type safe comparison contract for objects."
	}
}
